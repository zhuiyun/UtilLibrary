<resources>
    <declare-styleable name="MyTempCircle">
        <attr name="lineWidth" format="dimension" />
        <attr name="pointWidth" format="dimension" />
        <attr name="pointHigh" format="dimension" />
        <attr name="scaleWidth" format="dimension" />
    </declare-styleable>
    <declare-styleable name="nightView">
        <attr name="deviceType" format="string" />
        <attr name="bright" format="reference|color" />
        <attr name="dark" format="reference|color" />
        <attr name="backgroundLight" format="reference|color" />
        <attr name="backgroundDark" format="reference|color" />
    </declare-styleable>
</resources>